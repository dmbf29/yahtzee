<div class="container">
  <h1><%= @game.name.empty? ? "Yahtzee" : @game.name %></h1>

  <% unless @game.users.include?(current_user) %>
    <%= form_for [@game, @participation] do |f| %>
      <%= f.submit 'Join', class: 'btn btn-primary' %>
    <% end %>
  <% end %>

  <p>Participants</p>
  <ol>
    <% @game.users.each do |user| %>
      <li><%= user.name %></li>
    <% end %>
  </ol>

</div>

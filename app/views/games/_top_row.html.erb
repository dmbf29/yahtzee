<div style="display:flex;align-items:center;flex:50%;flex-grow:0;padding-right: 15px;">
  <% if @participation.id %>
    <div class="d-flex w-100">
      <button style='font-size: 13px;' class="btn btn-secondary my-2 d-flex align-items-center" id="share-btn" data-container="body" data-toggle="popover" data-placement="top" data-content="Copied to clipboard.">
        Share&nbsp;<i class="fas fa-share-alt"></i>
      </button>
      <p class="my-2 w-100">
        <input id="share-link" type="text" value="<%= game_url(@game) %>" readonly class='form-control w-100'>
      </p>
    </div>
  <%# elsif @game.full?  %>
  <% else %>
    <div class="my-2">
      <%= link_to game_participations_path(@game, @participation), method: :post, remote: true, class: 'btn btn-primary', style: "font-size: 13px;" do %>
        <i class="fas fa-play-circle"></i> Join
      <% end %>
    </div>
  <% end %>
</div>
<% if @participation.id %>
  <p id="dice-btn" class="btn btn-primary m-0" style='font-size: 13px;'>
    Dice <i class="fas fa-chevron-down"></i>
  </p>
<% end %>

<div class="modal fade" id="removeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Remove a Player</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table id="leaderboard" class="table table-hover table-sm">
          <thead class="thead-dark">
            <tr>
              <th class="text-left">Players</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% if @participations.any? %>
              <% @participations.each do |participation| %>
                <tr>
                  <td class="text-left"><%= participation.user.name %></td>
                  <td><%= link_to participation_path(participation), method: :delete, data: { confirm: "Leave game and lose progress?" }, class: '' do %><small><i class="fas fa-times"></i></small><% end %></td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td>No players yet.</td>
                <td></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
